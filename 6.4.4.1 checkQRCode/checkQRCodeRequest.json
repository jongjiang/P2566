{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/checkQRCodeRequest.schema.json",
    "title": "checkQRCodeRequest",
    "description": "checkQRCode request",
    "type": "object"
    "properties":{
		"appHeader": {
			"description": "checkQRCode request header",
			"type": "object",
			"properties":{
				"appSourceID":{
					"description": "api發送單位",
					"type": "integer"
				},
				"appDestID":{
					"description": "api接收單位",
					"type": "integer"
				},
				"appUID":{
					"description": "訊息UID",
					"type": "string"
				},
				"appDateTime":{
					"description": "訊息日期時間",
					"type": "string"
				}
			},
			"required":["appSourceID","appDestID","appUID","appDateTime"]
		},
		"appRepBody":{
			"description": "checkQRCode request body",
			"type": "object",
			"properties":{
				"qrCodeType":{
					"description": "QR CODE交易型態",
					"type": "string"
				},
				"txnAmount":{
					"description": "交易金額",
					"type": "number"
				},
				"txnCurrencyCode":{
					"description": "交易金額幣別",
					"type": "integer"
				},
				"countryCode":{
					"description": "國別碼",
					"type": "integer"
				},
				"acqID":{
					"description": "收單行代號",
					"type": "string"
				},
				"acqInfo":{
					"description": "收單行資訊",
					"type": "string"
				},
				"terminalID":{
					"description": "端末代號",
					"type": "string"
				},
				"merchantID":{
					"description": "特店代號",
					"type": "string"
				},
				"merchantName":{
					"description": "特店名稱",
					"type": "string"
				},
				"paymentType":{
					"description": "支付工具類型",
					"type": "string"
				},
				"secureCode":{
					"description": "QRCode安全碼",
					"type": "string"
				},
				"encryptedData":{
					"description": "QRCode密文資料",
					"type": "string"
				},
				"contentHash":{
					"description": "QRCode雜湊內容",
					"type": "string"
				},
				"qrCodeContentMAC":{
					"description": "QRCode內容押碼",
					"type": "string"
				},
				"deadline":{
					"description": "繳費-繳納期限(截止日)",
					"type": "string"
				},
				"noticeNumber":{
					"description": "繳費-銷帳編號",
					"type": "string"
				},
				"feeInfo":{
					"description": "繳費-費用資訊",
					"type": "string"
				},
				"transfereeBank":{
					"description": "P2P轉帳-轉入帳號",
					"type": "string"
				},
				"transfereeAccount":{
					"description": "P2P轉帳-轉入行代碼",
					"type": "string"
				},
				"walletProviderID":{
					"description": "P2P轉帳-錢包服務提供者",
					"type": "string"
				}
			},
			"required":["qrCodeType","countryCode"]
		}
    }
}